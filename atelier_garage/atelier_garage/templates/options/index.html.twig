{% extends 'base.html.twig' %}

{% block title %}Options index{% endblock %}

{% block body %}
    <h1>Options index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdOption</th>
                <th>NameOption</th>
                <th>DescripOption</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td>{{ option.id }}</td>
                <td>{{ option.IdOption }}</td>
                <td>{{ option.NameOption }}</td>
                <td>{{ option.DescripOption }}</td>
                <td>
                    <a href="{{ path('app_options_show', {'id': option.id}) }}">show</a>
                    <a href="{{ path('app_options_edit', {'id': option.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_options_new') }}">Create new</a>
{% endblock %}
