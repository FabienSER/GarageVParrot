{% extends 'base.html.twig' %}

{% block title %}OpenHours index{% endblock %}

{% block body %}
    <h1>OpenHours index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdDay</th>
                <th>StartMorning</th>
                <th>EndMorning</th>
                <th>StartAfternoon</th>
                <th>EndAfternoon</th>
                <th>LabelDay</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for open_hour in open_hours %}
            <tr>
                <td>{{ open_hour.id }}</td>
                <td>{{ open_hour.IdDay }}</td>
                <td>{{ open_hour.StartMorning }}</td>
                <td>{{ open_hour.EndMorning }}</td>
                <td>{{ open_hour.StartAfternoon }}</td>
                <td>{{ open_hour.EndAfternoon }}</td>
                <td>{{ open_hour.LabelDay }}</td>
                <td>
                    <a href="{{ path('app_open_hours_show', {'id': open_hour.id}) }}">show</a>
                    <a href="{{ path('app_open_hours_edit', {'id': open_hour.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_open_hours_new') }}">Create new</a>
{% endblock %}
